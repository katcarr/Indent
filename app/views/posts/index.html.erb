

<%= link_to 'Add Post', new_post_path, class: ["btn", 'btn-default']%>

<div class="row">
  <div class= "col-sm-8">
    <% @posts.each  do |post| %>
      <h3><%= post.title %></h3>
      <h4><%= post.date %></h4>
      <p><%= post.content %></p>
    <% end %>



  </div>

  <div class="col-sm-4">
    <% @posts.each  do |post| %>
      <h5><%= link_to post.title, post_path(post) %></h5>
    <% end %>
  </div>
</div>
